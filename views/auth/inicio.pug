extends ./layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div(class="py-5")
        h1(class="text-center text-4xl font-extrabold") Titulo

        form(action="/auth/buscador" method="POST" class="text-center py-2")
            input(type="hidden" name="_csrf" value=csrfToken)
            label(for="termino" class="text-sm uppercase font-bold text-white") Busqueda
            input(type="text" id="termino" name="termino" placeholder="Buscar" class="p-2 rounded-lg shadow text-sm")


            input(type="submit" class="bg-indigo-800 rounded-lg hover:bg-indigo-400 text-white uppercase font-bold p-2 cursor-pointer text-sm" value="Buscar") 
       

        section(classa="py-5")
            h2(class="text-center text-4xl font-extrabold py-5") Casas en venta

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each casa in casas
                    div(class="bg-white shadow rounded-lg")
                        img(class="object-cover h-72 w-full" src=`/uploads/${casa.imagen}` alt=`imagen casa`)
                        div(class="p-5 space-y-3")
                            h3(class="text-2xl font-bold uppercase text-center")= casa.titulo
                            a(href=`/propiedad/${casa.id}` class="bg-indigo-600 w-full text-center block font-bold text-white p-2 uppercase rounded") Ver
                            


block  scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    